---
import { providers, config } from './IxmageEngine.js';
let { provider, cls, alt, title, ...options } = Astro.props;
if (!provider) provider = config.provider || 'ixmage';
const getImage = providers[provider];

function url() { return getImage(options); }

let theurl = url();
---
<img class={cls || ''} src={theurl} width={options.width || options.w} height={options.height || options.h} alt={alt || title || ''} title={title || alt || ''} />